<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">
    <Button
        android:id="@+id/buttonteste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="usuarios" />

    <!-- Container principal para a lista de pedidos -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Exibição dos 5 pedidos em blocos -->
            <LinearLayout
                android:id="@+id/pedidoContainer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvPedidoNome1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Nome: " />

                <TextView
                    android:id="@+id/tvPedidoID1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID Pedido: " />

                <TextView
                    android:id="@+id/tvPedidoData1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data: " />

                <TextView
                    android:id="@+id/tvPedidoValor1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valor: " />

            </LinearLayout>

            <!-- Bloco 2 -->
            <LinearLayout
                android:id="@+id/pedidoContainer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvPedidoNome2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Nome: " />

                <TextView
                    android:id="@+id/tvPedidoID2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID Pedido: " />

                <TextView
                    android:id="@+id/tvPedidoData2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data: " />

                <TextView
                    android:id="@+id/tvPedidoValor2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valor: " />

            </LinearLayout>

            <!-- Bloco 3 -->
            <LinearLayout
                android:id="@+id/pedidoContainer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvPedidoNome3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Nome: " />

                <TextView
                    android:id="@+id/tvPedidoID3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID Pedido: " />

                <TextView
                    android:id="@+id/tvPedidoData3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data: " />

                <TextView
                    android:id="@+id/tvPedidoValor3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valor: " />

            </LinearLayout>

            <!-- Bloco 4 -->
            <LinearLayout
                android:id="@+id/pedidoContainer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvPedidoNome4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Nome: " />

                <TextView
                    android:id="@+id/tvPedidoID4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID Pedido: " />

                <TextView
                    android:id="@+id/tvPedidoData4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data: " />

                <TextView
                    android:id="@+id/tvPedidoValor4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valor: " />

            </LinearLayout>

            <!-- Bloco 5 -->
            <LinearLayout
                android:id="@+id/pedidoContainer5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvPedidoNome5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Nome: " />

                <TextView
                    android:id="@+id/tvPedidoID5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID Pedido: " />

                <TextView
                    android:id="@+id/tvPedidoData5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data: " />

                <TextView
                    android:id="@+id/tvPedidoValor5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valor: " />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
